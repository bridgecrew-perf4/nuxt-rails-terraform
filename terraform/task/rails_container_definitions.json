[
  {
    "name": "rails-container",
    "image": "667123667048.dkr.ecr.ap-northeast-1.amazonaws.com/rails-ecr:latest",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "rails",
        "awslogs-group": "/ecs/rails"
      }
    },
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 3000,
        "hostPort": 3000
      }
    ],
    "command": [
      "bundle", "exec", "rails", "s", "-b", "0.0.0.0"
    ],
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "production"
      },
      {
        "name": "WORKDIR",
        "value": "app"
      },
      {
        "name": "HOST",
        "value": "0.0.0.0"
      },
      {
        "name": "PORT",
        "value": "3000"
      }
    ],
    "secrets": [
      {
        "name": "AWS_ACCESS_KEY_ID",
        "valueFrom": "access-key-id"
      },
      {
        "name": "AWS_SECRET_ACCESS_KEY",
        "valueFrom": "secret-access-key"
      },
      {
        "name": "DB_HOST",
        "valueFrom": "db"
      },
      {
        "name": "DB_NAME",
        "valueFrom": "next-rails-db"
      },
      {
        "name": "DB_USERNAME",
        "valueFrom": "root"
      },
      {
        "name": "DB_PASSWORD",
        "valueFrom": "password"
      }
    ]
  }
]